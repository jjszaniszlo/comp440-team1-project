{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Blog Platform Mock Data",
  "type": "object",
  "required": ["users", "blogs"],
  "$defs": {
    "comment": {
      "type": "object",
      "required": ["author_username", "content", "sentiment", "replies"],
      "properties": {
        "author_username": {
          "type": "string",
          "description": "Username of comment author"
        },
        "content": {
          "type": "string",
          "minLength": 10,
          "maxLength": 10000,
          "description": "Comment text content"
        },
        "sentiment": {
          "type": "string",
          "enum": ["positive", "negative"],
          "maxLength": 20,
          "description": "Sentiment analysis of the comment"
        },
        "replies": {
          "type": "array",
          "minItems": 0,
          "maxItems": 3,
          "description": "Array of nested replies (can go up to 5 levels deep, but most commonly 1-2 levels). Each reply can have its own replies.",
          "items": {
            "$ref": "#/$defs/comment"
          }
        }
      }
    }
  },
  "properties": {
    "users": {
      "type": "array",
      "description": "Array of user accounts",
      "items": {
        "type": "object",
        "required": ["username", "password", "email", "phoneNumber", "firstName", "lastName"],
        "properties": {
          "username": {
            "type": "string",
            "pattern": "^[A-Za-z][A-Za-z0-9_]{5,29}$",
            "maxLength": 50,
            "description": "Unique username for the user (6-30 chars, must start with letter, then alphanumeric or underscore)"
          },
          "password": {
            "type": "string",
            "minLength": 8,
            "maxLength": 255,
            "description": "Plain text password (will be hashed by service layer)"
          },
          "email": {
            "type": "string",
            "pattern": "^\\S+@\\S+\\.\\S+$",
            "maxLength": 100,
            "description": "User's email address - MUST BE UNIQUE across all users"
          },
          "phoneNumber": {
            "type": "string",
            "pattern": "^\\+?\\d{1,4}?[-.\\s]?\\(?\\d{1,3}?\\)?[-.\\s]?\\d{1,4}[-.\\s]?\\d{1,4}[-.\\s]?\\d{1,9}$",
            "maxLength": 25,
            "description": "Phone number with optional country code and flexible formatting (will be normalized to +CC.NNNNNNNNNN) - MUST BE UNIQUE across all users"
          },
          "firstName": {
            "type": "string",
            "pattern": "^[A-Za-z]+$",
            "maxLength": 50,
            "description": "User's first name (alphabetic characters only)"
          },
          "lastName": {
            "type": "string",
            "pattern": "^[A-Za-z]+$",
            "maxLength": 50,
            "description": "User's last name (alphabetic characters only)"
          }
        }
      }
    },
    "blogs": {
      "type": "array",
      "description": "Array of blog posts with nested comments",
      "items": {
        "type": "object",
        "required": ["author_username", "subject", "description", "content", "tags", "comments"],
        "properties": {
          "author_username": {
            "type": "string",
            "description": "Username of the blog author (must match a user from users array)"
          },
          "subject": {
            "type": "string",
            "minLength": 5,
            "maxLength": 100,
            "description": "Blog post title/subject"
          },
          "description": {
            "type": "string",
            "minLength": 50,
            "maxLength": 5000,
            "description": "Compelling description/summary of the blog post (50-500 characters recommended)"
          },
          "content": {
            "type": "string",
            "minLength": 3000,
            "maxLength": 50000,
            "description": "Full blog post content in Markdown format (3000-5000 characters required for high-quality, in-depth content)"
          },
          "tags": {
            "type": "array",
            "minItems": 5,
            "maxItems": 10,
            "description": "Array of tag strings for categorizing the blog",
            "items": {
              "type": "string",
              "minLength": 2,
              "maxLength": 50
            }
          },
          "comments": {
            "type": "array",
            "minItems": 5,
            "maxItems": 10,
            "description": "Array of root-level comments on the blog post (root comment authors must NOT be the blog author)",
            "items": {
              "$ref": "#/$defs/comment"
            }
          }
        }
      }
    }
  }
}
